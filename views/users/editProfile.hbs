
 <form action="/editProfile" method="POST" enctype="multipart/form-data">
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full profile__box">
                        <div class="row m-l-0 m-r-0 image__box">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"> 
                                        {{#if currentUser.image}}
                                        <img src='{{currentUser.image}}' class="img-radius" alt="User-Profile-Image" > </div>
                                        <input type="file" name="image" class="btn_file" value="{{currentUser.image}}"></input>
                                        {{else}}
                                        <img src='https://images.unsplash.com/photo-1494976388531-d1058494cdd8?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2250&q=80' class="img-radius" alt="User-Profile-Image" > </div>
                                        {{/if}} 
                                        <p> 
                                    {{#if currentUser.name}}
                                    <input type="text" value="{{currentUser.name}}" name="name" class="input_name title__profile"></input>
                                    {{else}}
                                    <h6 class="f-w-600 title__profile">{{currentUser.name}}</h6>
                                    {{/if}}
                                    
                                    
                                </div>
                            </div>

                    
                            
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600 title__profile">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600 title__profile">Email</p>
                                            <input type="text" value="{{currentUser.email}}" name="email" class="input_email"></input>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600 title__profile">Phone</p>
                                        <input type="text" value="{{currentUser.phone}}" name="phone" class="input_phone"></input>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600 title__profile">Age</p>
                                            <input type="text" value="{{currentUser.age}}" name="age" class="input_age"></input>
                                        </div>
                                    </div>
                                    

                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-primary mb-3 btn_bubmit">Submit</button>
                                    </div>
                                    
                                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 </form>