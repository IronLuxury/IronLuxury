<div class="register__login">
   <div class="login__box">
      <h2>Register</h2>
      <form action="/register" method="POST">
         <div class="user__box">
            <input type="text" name="name" required />
            <label>Name</label>
         </div>
         
         
         <div class="user__box">
            <input type="email" name="email"  value="{{user.email}}" class="form-control {{#if errors.email}}is-invalid{{/if}}"  required>
            <label>Email</label>
         </div>
         
         
         <div class="user__box">
            <input type="password" name="password" value="{{user.password}}" class="form-control {{#if errors.password}}is-invalid{{/if}}"required>
            <label for="password">Password</label>
         </div>
         
         
         <div class="user__box">
            <input type="text" name="dni" required/>
            <label>DNI</label>
         </div>
         
         
         <div class="user__box">
            <input type="text" name="phone" required/>
            <label>Phone number</label>
         </div>

         <button type="submit" class="btn__submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Create account
         </button>
      </form>
   </div>
</div>