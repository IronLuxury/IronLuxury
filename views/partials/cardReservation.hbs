<div class="container">
    <div class="col">
        <div class="card" style="border: none;">
            <div class="card__img">
                <img src="{{car.image}}" class="card-img-top card__img__rent" alt="...">
            </div>
                
            <div class="card-body card__body">
                <div class="div__title">
                    <h5 class="card-title card__title">{{car.brand}} {{car.model}}</h5>
                </div>
                <div class="div__price">
                    <div class="price">{{car.price}}â‚¬</div>
                </div>
                <div class="div__bottom">
                    <h5 class="card__title__bottom"><img src="/img/calendar.png" alt="wheel" style="height: 30px;">
                        Date: {{#formatDate this.dateReserve}}
                              {{/formatDate}}
                    </h5>
                    </div>
                <div class="div__bottom">
                    <h5 class="card__title__bottom"><img src="/img/phone-call.png" alt="wheel" style="height: 30px;">
                        Phone: {{this.phone}}
                    </h5>
                </div>
                <div class="cancel__btn" style="margin: 25px;">
                    <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Cancel Reservation
                    </button>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel" style="color: rgb(194, 41, 41);">IronLuxury</h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <span style="color: black;">Are you sure you want to cancel the reservation?</span>
                                    
                            </div>
                            <div class="modal-footer">
                            <div class="cancel__btn" style="margin: 25px;">
                                <form action="/reservation/{{this.id}}/delete" method="POST">
                                    <button type="submit" style="margin-bottom:10px; width:100px; height:40px;" >
                                        Cancel
                                    </button>
                                </form>
                            </div>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 